<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="facebook"
        android:textColor="#166FE5"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile number or email address"
        android:background="#F1F3F4"
        android:textSize="16dp"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="#000000"
        android:background="#F1F3F4"
        android:padding="12dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:textSize="16dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:backgroundTint="#166FE5"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgotten password?"
        android:layout_marginLeft="140dp"
        android:textColor="#367BD6"
        android:textSize="16dp"
        android:textStyle="normal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="155dp"
            android:layout_height="2dp"
            android:background="#D6D4D4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            />

        <View
            android:layout_width="155dp"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:background="#D6D4D4"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:textAllCaps="false"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00A400"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English (UK)"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="140dp"
            android:textSize="16dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filipino"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="140dp"
            android:textSize="16dp"
            android:textColor="#4B5CBD"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bisaya"
            android:layout_marginLeft="90dp"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:textColor="#4B5CBD"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Español"
            android:layout_marginLeft="153dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="#4B5CBD"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日本語"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="3dp"
            android:textSize="16dp"
            android:textColor="#4B5CBD"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한국어"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="3dp"
            android:textSize="16dp"
            android:textColor="#4B5CBD"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Português (Brasil)"
            android:layout_marginLeft="60dp"
            android:textSize="16dp"
            android:layout_marginTop="3dp"
            android:textColor="#4B5CBD"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_marginLeft="130dp"
            android:textSize="20dp"
            android:layout_marginTop="3dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook Inc."
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"/>

</LinearLayout>